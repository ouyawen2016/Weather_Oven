    android:layout_margin="15dp">

    <TextView
        android:text="TextView"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:id="@+id/day1_tv_forecastItem" />

    <TextView
        android:text="TextView"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/day2_tv_forecastItemtextView2" />

    <TextView
        android:text="TextView"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/day3_tv_forecastItemtextView3" />

    <TextView
        android:text="TextView"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/day4_tv_forecastItemtextView4" />
